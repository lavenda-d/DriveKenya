# Environment Variables for DriveKenya Backend
# Copy this file to .env and update the values

NODE_ENV=development
PORT=5000

# Database Configuration (SQLite - Default, no setup required)
# The app uses SQLite by default for easy setup
# PostgreSQL config below (optional - for production)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=driveKenya_db
DB_USER=your_db_username
DB_PASSWORD=your_db_password
DB_URL=postgresql://your_db_username:your_db_password@localhost:5432/driveKenya_db

# JWT Secret for Authentication (CHANGE IN PRODUCTION!)
JWT_SECRET=driveKenya_dev_secret_key_2025_change_in_production
JWT_EXPIRES_IN=7d

# Google Maps API Configuration (Optional - for maps features)
# Get your API key from: https://console.cloud.google.com/
VITE_GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here
VITE_GOOGLE_MAPS_MAP_ID=your_map_id_here

# CORS Configuration
FRONTEND_URL=http://localhost:3000
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# File Upload Configuration
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=5242880

# Email Configuration (Optional - for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
EMAIL_FROM=DriveKenya <noreply@driveKenya.com>

# Stripe Configuration for Payments (Optional - for card payments)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# IntaSend M-Pesa Configuration (Recommended for Kenya)
# Sign up at: https://intasend.com
# Get API keys from: https://payment.intasend.com/account/api-keys/
INTASEND_API_KEY=your_intasend_secret_api_key
INTASEND_PUBLISHABLE_KEY=your_intasend_publishable_key
INTASEND_TEST_MODE=true
# Optional: Webhook secret for verifying callbacks
INTASEND_WEBHOOK_SECRET=your_webhook_secret

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# Debug Options (for development)
DEBUG_SQL=false
DEBUG_WEBSOCKET=false